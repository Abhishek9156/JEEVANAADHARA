<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="@dimen/size50"
          android:orientation="vertical">

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/margin_5"
                   android:layout_marginStart="@dimen/margin_5"
                   android:layout_marginTop="5dp">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="shipping Details"
                      android:textColor="@color/colorBlack"
                      android:textSize="@dimen/textsize16" />


                  <TextView
                      android:id="@+id/change_address"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:padding="@dimen/margin_5"
                      android:text="change address"
                      android:textAllCaps="true"
                      android:textColor="@color/colorOrange"
                      android:textSize="@dimen/textsize12" />
               </RelativeLayout>

               <TextView
                   android:id="@+id/shippingDetails"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/margin_5"
                   android:layout_marginStart="@dimen/margin_5"
                   android:layout_marginTop="5dp"
                   android:focusable="false"
                   android:focusableInTouchMode="false"
                   android:gravity="top"
                   android:textSize="@dimen/textsize14"
                   android:visibility="visible" />

               <TextView
                   android:id="@+id/select_shipping_address"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/margin_50"
                   android:layout_marginLeft="@dimen/margin_30"
                   android:layout_marginRight="@dimen/margin_30"
                   android:layout_marginTop="5dp"
                   android:background="@color/colorLightGrey"
                   android:gravity="center"
                   android:text="select shipping address"
                   android:textColor="@color/colorWhite"
                   android:textSize="@dimen/textsize16"
                   android:visibility="gone" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginLeft="@dimen/margin_10"
                   android:layout_marginRight="@dimen/margin_10"
                   android:layout_marginTop="@dimen/size15"
                   android:background="@color/colorLightGrey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/margin_5"
                   android:layout_marginStart="@dimen/margin_5"
                   android:layout_marginTop="@dimen/size15"
                   android:text="order summary"
                   android:textColor="@color/colorBlack"
                   android:textSize="@dimen/textsize16" />

               <LinearLayout
                   android:id="@+id/item_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/margin_5"
                   android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/product_image"
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_gravity="center"
                      android:src="@drawable/tanker" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="@dimen/size15"
                      android:orientation="vertical">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            android:id="@+id/itemNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize14"
                            tools:text="1000L " />

                        <TextView
                            android:id="@+id/itemPriceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/textsize14"
                            tools:text="Price: â‚¹400" />
                     </LinearLayout>

                     <TextView
                         android:id="@+id/itemQuantityText"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/textsize13"
                         tools:text="2 Tanker" />


                     <TextView
                         android:id="@+id/vendorName"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="4dp"
                         android:fontFamily="sans-serif-medium"
                         android:textColor="#000000"
                         android:textSize="13sp"
                         tools:text="Vendor" />


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="4dp"
                         android:fontFamily="sans-serif-medium"
                         android:textColor="#000000"
                         android:textSize="13sp"
                         tools:text="minimum time: 40 Min" />



                  </LinearLayout>

               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginLeft="@dimen/margin_10"
                   android:layout_marginRight="@dimen/margin_10"
                   android:layout_marginTop="@dimen/margin_15"
                   android:background="@color/colorLightGrey" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Delivery slot"
                      android:textColor="@color/colorBlack"
                      android:textSize="@dimen/textsize16" />

                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_height="@dimen/size40"
                      android:layout_weight="2"
                      android:background="@drawable/custom_spinner_background"
                      android:orientation="horizontal">

                     <Spinner
                         android:id="@+id/spinnerTime"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_gravity="center"
                         android:layout_marginLeft="5dp"
                         android:background="@android:color/transparent"
                         android:gravity="center"
                         android:spinnerMode="dropdown" />

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                         android:layout_gravity="center"
                         android:src="@drawable/ic_expand_more_black_24dp" />

                  </RelativeLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginLeft="@dimen/margin_10"
                   android:layout_marginRight="@dimen/margin_10"
                   android:layout_marginTop="@dimen/margin_10"
                   android:background="@color/colorLightGrey" />

               <EditText
                   android:id="@+id/comments_ed"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@android:color/transparent"
                   android:hint="Any request? We will pass it on"
                   android:imeOptions="actionDone"
                   android:maxLines="1"
                   android:minHeight="@dimen/margin_50"
                   android:paddingLeft="@dimen/margin_10"
                   android:paddingRight="@dimen/margin_10"
                   android:textSize="@dimen/text_14" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="10dp"
                   android:background="@color/colorLightGrey" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:paddingBottom="@dimen/margin_5"
                   android:paddingTop="@dimen/margin_5">

                  <LinearLayout
                      android:id="@+id/promo_code_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:orientation="horizontal">

                     <ImageView
                         android:layout_width="27dp"
                         android:layout_height="27dp"
                         android:layout_marginLeft="10dp"
                         android:src="@drawable/ic_discount_svg" />

                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="15dp"
                         android:layout_weight="1"
                         android:fontFamily="sans-serif"
                         android:text="Promo Codes"
                         android:textAllCaps="true"
                         android:textColor="#009ee9"
                         android:textSize="14sp" />

                     <ImageView
                         android:layout_width="20dp"
                         android:layout_height="30dp"
                         android:layout_marginRight="@dimen/margin_25"
                         android:scaleType="centerInside"
                         android:src="@drawable/ic_arrow_right_svg" />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/promo_code_desc_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorLightGrey"
                      android:orientation="horizontal"
                      android:visibility="gone">

                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">

                        <TextView
                            android:id="@+id/promo_applied_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/promo_applied_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="13sp" />
                     </LinearLayout>

                     <ImageView
                         android:id="@+id/remove_promo_code"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:padding="15dp"
                         android:scaleType="fitCenter"
                         android:src="@drawable/ic_cross_svg" />
                  </LinearLayout>
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="10dp"
                   android:background="@color/colorLightGrey" />

               <RadioGroup
                   android:id="@+id/radioGroup"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="@dimen/margin_10"
                   android:layout_marginStart="@dimen/margin_5"
                   android:layout_marginTop="@dimen/margin_5"
                   android:gravity="top"
                   android:minHeight="56dp"
                   android:orientation="horizontal">

                  <RadioButton
                      android:id="@+id/modeOnline"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="online"
                      android:textSize="@dimen/text_14" />

                  <RadioButton
                      android:id="@+id/modeWallet"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Wallet"
                      android:textSize="@dimen/text_14" />

                  <RadioButton
                      android:id="@+id/modeCOD"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="cash cod"
                      android:textSize="@dimen/text_14" />
               </RadioGroup>



               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginEnd="@dimen/margin_10"
                   android:layout_marginStart="@dimen/margin_10"
                   android:layout_marginTop="@dimen/margin_5"
                   android:background="@color/colorLightGrey" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="5dp"
                   android:text="payment details"
                   android:textColor="@color/colorBlack"
                   android:textSize="@dimen/textsize16" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="@dimen/margin_5"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:text="payment method :"
                      android:textSize="@dimen/textsize14" />

                  <RelativeLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1">

                     <TextView
                         android:id="@+id/paymentText"
                         android:layout_width="@dimen/margin_80"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:gravity="right"
                         android:textColor="@color/colorBlack"
                         android:textSize="@dimen/textsize16"
                         android:textStyle="bold" />
                  </RelativeLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="@dimen/margin_5"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:text="sub total:"
                      android:textSize="@dimen/textsize14" />

                  <TextView
                      android:id="@+id/subTotalText"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textColor="@color/colorBlack"
                      android:textSize="@dimen/textsize14" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="@dimen/margin_5"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:text="Shipping Charges Inc."
                      android:textSize="@dimen/textsize14" />

                  <TextView
                      android:id="@+id/totalTaxText"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textColor="@color/colorBlack"
                      android:textSize="@dimen/textsize14" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="@dimen/margin_5"
                   android:orientation="horizontal"
                   android:visibility="visible">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:text="Floor Charges:"
                      android:textSize="@dimen/textsize14" />

                  <TextView
                      android:id="@+id/miscChargesText"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textColor="@color/colorBlack"
                      android:textSize="@dimen/textsize14" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/margin_5"
                   android:layout_marginRight="@dimen/margin_5"
                   android:layout_marginTop="@dimen/margin_5"
                   android:orientation="horizontal"
                   >

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:text="total payable:"
                      android:textSize="@dimen/textsize14" />

                  <TextView
                      android:id="@+id/totalPayableText"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:textColor="@color/colorGreen"
                      android:textSize="@dimen/textsize14" />
               </LinearLayout>





            </LinearLayout>

         </ScrollView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginBottom="@dimen/margin_60"
          android:layout_alignParentBottom="true">

         <TextView
             android:id="@+id/payableAmountText"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@color/colorOrange"
             android:gravity="center"
             android:text="Back"
             android:textColor="@color/colorWhite"
             android:textSize="@dimen/textsize16" />


         <TextView
             android:id="@+id/placeOrder"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@color/colorPrimary"
             android:gravity="center"
             android:padding="@dimen/size12"
             android:text="Placeorder"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textSize="@dimen/textsize16" />
      </LinearLayout>
   </RelativeLayout>
</LinearLayout>